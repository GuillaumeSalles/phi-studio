{
  "compilerOptions": {
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "module": "commonjs",
    "target": "ES2019",
    "lib": ["ES2019"],
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    }
  },
  "include": ["src/**/*"]
}
