{
  "name": "studio",
  "version": "0.1.0",
  "private": true,
  "homepage": "./",
  "author": "Guillaume Salles",
  "main": "server/electron.js",
  "build": {
    "appId": "com.electron.phi-studio",
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "productName": "Phi Studio",
    "mac": {
      "category": "public.app-category.graphics-design"
    },
    "directories": {
      "buildResources": "public"
    }
  },
  "dependencies": {
    "@emotion/core": "^10.0.10",
    "@types/jest": "^24.0.13",
    "@types/react": "16.9.23",
    "@types/react-dom": "^16.8.4",
    "@types/uuid": "^3.4.4",
    "install": "^0.12.2",
    "npm": "^6.9.0",
    "react": "16.13.0",
    "react-dom": "16.13.0",
    "react-scripts": "3.4.0",
    "typescript": "3.8.3",
    "uuid": "^3.3.2"
  },
  "scripts": {
    "start": "nf start -p 3000",
    "build": "npm run build:cra && cp -a ./server/. ./build/ && npm run electron-dist",
    "build:cra": "rm -rf ../vscode/content/static && react-scripts build && mv build/static ../vscode/content/static",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "electron": "electron .",
    "electron-start": "node src/start-react",
    "react-start": "BROWSER=none react-scripts start",
    "pack": "build --dir",
    "dist": "npm run build && build",
    "postinstall": "electron-builder install-app-deps",
    "electron-pack": "electron-builder --dir",
    "electron-dist": "electron-builder"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@types/node": "^12.0.8",
    "electron": "^5.0.2",
    "electron-builder": "^21.2.0",
    "foreman": "^3.0.1"
  }
}
