{
  "name": "studio",
  "version": "0.1.0",
  "private": true,
  "homepage": "./",
  "author": "Guillaume Salles",
  "main": "server/electron.js",
  "build": {
    "appId": "com.electron.phi-studio",
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "productName": "Phi Studio",
    "mac": {
      "category": "public.app-category.graphics-design",
      "icon": "build/icons/mac/icon.icns"
    },
    "directories": {
      "buildResources": "public"
    }
  },
  "dependencies": {
    "@emotion/core": "^10.0.10",
    "@types/jest": "^24.0.13",
    "@types/react": "^16.8.19",
    "@types/react-autocomplete": "^1.8.5",
    "@types/react-dom": "^16.8.4",
    "@types/react-router": "^5.0.1",
    "@types/react-router-dom": "^4.3.3",
    "@types/react-syntax-highlighter": "^10.2.1",
    "@types/uuid": "^3.4.4",
    "install": "^0.12.2",
    "npm": "^6.9.0",
    "react": "^16.8.6",
    "react-autocomplete": "^1.8.1",
    "react-dom": "^16.8.6",
    "react-router": "^5.0.1",
    "react-router-dom": "^5.0.1",
    "react-scripts": "3.0.1",
    "react-syntax-highlighter": "^11.0.2",
    "typescript": "^3.5.1",
    "uuid": "^3.3.2"
  },
  "scripts": {
    "start": "nf start -p 3000",
    "build": "react-scripts build && cp -a ./server/. ./build/ && npm run make-icons && npm run electron-dist",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "electron": "electron .",
    "electron-start": "node src/start-react",
    "react-start": "BROWSER=none react-scripts start",
    "pack": "build --dir",
    "dist": "npm run build && build",
    "postinstall": "electron-builder install-app-deps",
    "electron-pack": "electron-builder --dir",
    "electron-dist": "electron-builder",
    "make-icons": "electron-icon-maker -i ./src/icons/logo.png -o ./build"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@types/node": "^12.0.8",
    "electron": "^5.0.2",
    "electron-builder": "^21.2.0",
    "electron-icon-maker": "0.0.4",
    "foreman": "^3.0.1"
  }
}
